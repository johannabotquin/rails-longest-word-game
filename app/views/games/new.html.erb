<div class="container">
  <h1>New game</h1>

  <div class="letters">
    <p>
      <% @letters.each do |letter| %>
      <span><%= letter %></span>
      <% end %>
    </p>
  </div>

  <div class="form">
    <form action="score" method="POST" data-turbo="false">
    <label for="form">What is the longest word you can find?</label>
    <p>
      <input type="text" name="word" class="text">
      <input type="submit" value ="play" class="btn">
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      <%= hidden_field_tag :letters, @letters %>
    </p>
    </form>
  </div>
</div>
